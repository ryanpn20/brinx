<section class="first-section">
	<div class="responsive-division hidden visible-xs"></div>
	<div class="container">
		<% if topic.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

				<ul>
					<% topic.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	    <div class="login-signup">
	      <div class="row">
	        <div class="col-sm-6 nav-tab-holder">
	        <ul class="nav nav-tabs row" role="tablist">
	          <li role="presentation" class="active col-sm-6"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Learner</a></li>
	          <li role="presentation" class="col-sm-6"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Instructor</a></li>
	        </ul>
	      </div>

	      </div>


	      <div class="tab-content">
	        <div role="tabpanel" class="tab-pane active" id="home">
	          <div class="row">
	            <div class="col-md-12 mobile-pull">
	              <article role="login">
	                <h3 class="text-center"><i class="fa fa-lock"></i>Create a learner account</h3>
	                <%= form_for(:user, url: users_path, html: { :multipart => true }) do |form| %>
	                <form class="signup" action="index.html" method="post">
	                  <div class="form-group">
	                    <%= form.text_field :email, id: :user_name, class:'form-control', placeholder: 'Email Address' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.text_field :name, id: :name, class:'form-control', placeholder: 'Name and last name' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.password_field :password, id: :password, class:'form-control', placeholder: 'Password' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.password_field :password_confirmation, id: :password_confirmation, class:'form-control', placeholder: 'Password Confirmation' %>
	                  </div>
	                 <!--  <div class="form-group">
	                    <%= form.file_field :picture %>
	                  </div> -->
	                  <div class="form-group">
	                    <div class="checkbox">
	                      <label>
	                        <input type="checkbox"> Please accept the terms and conditions to proceed with your request.
	                      </label>
	                    </div>
	                  </div>
	                  <div class="form-group">
	                    <%= form.submit 'SUBMIT', class: 'btn-success-register btn-block'%>
	                  </div>
	                <% end %>


	              </article>
	            </div>


	          </div>
	          <!-- end of row -->
	        </div>

	      <div role="tabpanel" class="tab-pane" id="profile">
	        <div class="row">

	          <div class="col-md-12 mobile-pull">
	            <article role="login">
	              <h3 class="text-center"><i class="fa fa-lock"></i> Become an instructor today</h3>
	              <%= form_for(:instructor, url: instructors_path) do |form| %>
	                <form class="signup" action="index.html" method="post">
	                  <div class="form-group">
	                    <%= form.text_field :email, id: :user_name, class:'form-control', placeholder: 'Email Address' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.text_field :name, id: :name, class:'form-control', placeholder: 'Name and last name' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.password_field :password, id: :password, class:'form-control', placeholder: 'Password' %>
	                  </div>
	                  <div class="form-group">
	                    <%= form.password_field :password_confirmation, id: :password_confirmation, class:'form-control', placeholder: 'Password Confirmation' %>
	                  </div>
	                  <div class="form-group">
	                    <div class="checkbox">
	                      <label>
	                        <input type="checkbox"> Please accept the terms and conditions to proceed with your request.
	                      </label>
	                    </div>
	                  </div>
	                  <div class="form-group">
	                    <%= form.submit 'SUBMIT', class: 'btn-success-register btn-block'%>
	                  </div>
	                <% end %>



	            </article>
	          </div>
	        </div>
	      </div>
	  </div>
	  </div>
	</div>
</section>
<% if flash[:errors] %>
<% errores = '' %>
<% flash[:errors].each do |err| %>
	<% errores << "<li>#{err}</li>".html_safe %>
<%end%>
<script>
  swal({
    html:true,
    title: "Opps...",
    text: '<ul><%= errores %></ul><img draggable="false" class="emoji" alt="ðŸ˜…" src="https://s.w.org/images/core/emoji/2.3/svg/1f605.svg" style="max-width: 20%;">'
  });
</script>
<% end %>
