<div class="margin-top_angel">
  <div class="container">


    <div class="row">
      <p id="notice"><%= notice %></p>

      <div class="col-md-8">

        <div class="panel-heading">
          <h1><%= @course.title %>
            <%= @course.language %></h1>
        </div>

        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-responsive">

              <table class="table">
                <thead>
                  <tr>
                    <th>Unit Name</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @course.units.each do |unit| %>
                  <tr>
                    <td><%= unit.name %></td>
                    <td><%= unit.duration %></td>
                    <td><%= @course.topic_id %></td>
                    <td>
                      <%= link_to 'Start', unit_path(unit) %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>

              </table>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
