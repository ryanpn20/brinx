<section  class="first-section">
  <div class="container">


    <div class="row">
        <p id="notice"><%= notice %></p>
          <div class="panel-heading">
            <h1><%= @course.title %>
              <%= @course.language %></h1>
          </div>
          <hr/>
        <div class="col-md-9">
          <div class="row">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="table-responsive">

                <table class="table table-inverse">
                  <thead class="thead-inverse">
                    <tr>
                      <th>Unit Name</th>
                      <th>Duration</th>
                      <th class="text-center">Watched</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @course.units.each do |unit| %>
                    <tr>
                      <td><%= unit.name %></td>
                      <td><%= Time.at(unit.duration).utc.strftime("%H:%M:%S")  %> <i class="fa fa-clock-o" ></i></td>
                      <td class="text-center"><i class="fa fa-check"></i></td>
                      <td class="text-center">
                        <%= link_to 'Play now <i class="fa fa-play"></i>'.html_safe, unit_path(unit), class: 'btn btn-success btn-xs' %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>

                </table>

              </div>
            </div>
          </div>
        </div>
        </div>
        <div class="col-md-3">
          <div class="row">
            <div class="col-md-12 col-sm-12 text-center">
              <div class="progress blue">
                <span class="progress-left">
                  <span class="progress-bar"></span>
                </span>
                <span class="progress-right">
                  <span class="progress-bar"></span>
                </span>
                <div class="progress-value">90%</div>
              </div>
              <p>Your progress</p>
              <br/>
            </div>
            <div class="col-md-12 col-sm-12">
              <%= render 'layouts/partials/user_menu' %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</section>
