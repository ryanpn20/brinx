<section class="first-section">
  <div class="container">
    <div class="row">
      <div class="container-form">

        <h1 class="create-topic">Create and Share your Topic</h1>

        <%= form_for(:topic, url: topics_path, html: { :multipart => true, class:'well form-horizontal' }) do |form| %>
        <fieldset>

        <div class="form-group">
          <label class="col-md-4 control-label">Topic Name</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>

              <%= form.text_field :name, class: 'form-control', placeholder: "What would you like your topic to be called.." %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label">Topic Category</label>
            <div class="col-md-4 selectContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <select name="topic[cat]" class="form-control selectpicker" >
                <option value="devlopment">Development</option>
                <option value="data">Data Science</option>
                <option value="it">IT</option>
                <option value="analytics">Analytics</option>
                <option value="design">Design</option>
                <option value="software">Software</option>
                <option value="hardware">Hardware</option>
              </select>
            </div>
          </div>
        </div>

        <div class="form-group">
        <label class="col-md-4 control-label">Language</label>
        <div class="col-md-4 selectContainer">
        <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
        <select name="topic[language]" class="form-control selectpicker" >
          <option value="" >Please select your language</option>
          <option value="Afrikanns">Afrikanns</option>
          <option value="Albanian">Albanian</option>
          <option value="Arabic">Arabic</option>
