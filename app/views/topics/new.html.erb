        </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label">Topic Description</label>
          <div class="col-md-4 inputGroupContainer">
          <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
          <textarea class="form-control" name="topic[description]" placeholder="Topic Description"></textarea>
          </div>
          </div>
        </div>

        <!-- Success message -->
        <!-- <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-ok"></i> Your Topic has been committed!</div>
   -->
