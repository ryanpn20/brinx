    swal({
      html:true,
      title: "Opps...",
      text: '<ul><%= errores %></ul><img draggable="false" class="emoji" alt="ðŸ˜…" src="https://s.w.org/images/core/emoji/2.3/svg/1f605.svg" style="max-width: 20%;">'
    });
  </script>
<% end %>
