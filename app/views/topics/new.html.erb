        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4">
            <%= form.file_field :logo %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4">

            <%= form.submit "Commit".html_safe, class: 'btn btn-primary' %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4 social-links">
            <strong>Share your commitment!</strong>
