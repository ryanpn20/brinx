<section class="first-section">
  <div class="container">
    <div class="row">
    	<div class="col-md-12">
    	  <h1>New Trending Topics</h1>
    	  <hr/>
    	</div>
    </div>
    <div class="row">
    	<div class="col-md-6">
    	  <table class="table">
    	  	<thead>
    	  		<th>Name</th>
    	  		<th>No. commitments</th>
    	  		<th>Description</th>
    	  		<th>Total Collected</th>
    	  		<th></th>
    	  	</thead>

    	  <tbody>
    	  <% @topics.each do |topic| %>

    	      <tr>
    	      	<td><%=topic.name%></td>
    	      	<td><%=topic.commitments.count %></td>
    	      	<td><%=topic.description.truncate(27) %></td>
    	      	<td><b>$<%=sum_topic(topic)%> USD</b></td>
    	      	<td>
    	      		<%= link_to 'Apply now',  new_course_path, class:'btn btn-warning btn-xs' %>
    	      	</td>
    	      </tr>

    	  <%end%>
    	  </tbody>
    	  </table>
    	</div>
      <div class="col-md-6">
        <div class="container">
    <div class="row">
        <div class="col-lg-5 col-md-12 col-sm-8 col-xs-9 bhoechie-tab-container">
