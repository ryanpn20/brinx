<section class="first-section">
  <div class="container">
    <div class="row">
    	<div class="col-md-12">
    	  <h1>Browse courses</h1>
    	  <hr/>
    	</div>
    </div>
    <div class="row">
    	<div class="col-md-8">
    	  <table class="table">
    	  	<thead>
    	  		<th>Name</th>
    	  		<th>No. commitments</th>
    	  		<th>Description</th>
    	  		<th>Total Collected</th>
    	  		<th></th>
    	  	</thead>

    	  <tbody>
    	  <% @topics.each do |topic| %>
    	    
    	      <tr>
    	      	<td><%=topic.name%></td>
    	      	<td><%=topic.commitments.count %></td>
    	      	<td><%=topic.description.truncate(27) %></td>
    	      	<td><b>$<%=sum_topic(topic)%> USD</b></td>
    	      	<td>
    	      		<%= link_to 'Apply now',  new_course_path, class:'btn btn-warning btn-xs' %>
    	      	</td>
    	      </tr>
    	    
    	  <%end%>
    	  </tbody>
    	  </table>
    	</div>
    </div>
  </div>
</section>
<% if flash[:success] %>
  <script>
    swal({
      html:true,
      title: "<%= flash[:success].html_safe %>",
      text: '<img draggable="false" class="emoji" alt="ðŸ˜Ž" src="https://s.w.org/images/core/emoji/2.3/svg/1f60e.svg" style="max-width: 20%;">'
    });
  </script>
<% end %>