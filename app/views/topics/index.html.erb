<section  class="first-section">
    <div class="text-center">
        <h1>Topics</h1>
        <hr/>
    </div>
<div class="container">
    <div class="row">
        <!-- Button trigger modal -->



        <div class="index-content">
            <div class="container">
                <% @topics.each do |topic| %>
                <a href="blog-ici.html">
                    <div class="col-md-3">
                        <div class="card">
                            <%= image_tag topic.logo.url, class: 'img-responsive topic-image' %>
                            <h4><%= topic.name.capitalize %></h4>
                            <p>  </p>
                            <a type="button" class="blue-button" data-toggle="modal" data-target="#myModal">Commit now</a>
                        </div>
                    </div>
                </a> 
                <%end %>                    
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

</section>
<% if flash[:success] %>
  <script>
    swal({
      html:true,
      title: "<%= flash[:success] %>",
      text: '<img draggable="false" class="emoji" alt="ðŸ˜€" src="https://s.w.org/images/core/emoji/2.3/svg/1f600.svg" style="max-width: 20%;">'
    });
  </script>
<% end %>